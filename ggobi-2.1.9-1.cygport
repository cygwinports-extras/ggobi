DESCRIPTION="High-dimensional data visualization system"
HOMEPAGE="http://www.ggobi.org/"
SRC_URI="http://www.ggobi.org/downloads/${P}.tar.bz2"

PATCH_URI="
	2.1.7-no-undefined.patch
	2.1.7-vpath.patch
	2.1.9-graphviz.patch
"

CYGCONF_ARGS="--datadir=/usr/lib --with-all-plugins"

src_install() {
	cd ${B}
	cyginstall \
		desktopdir=/usr/share/applications \
		iconsdir=/usr/share/pixmaps

	cygmake ggobirc
	insinto /etc/xdg/${PN}
	doins ggobirc
}
